<?xml version="1.0" encoding="UTF-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="ingredients">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="ingredient" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:simpleType name="t_importancia">
        <xs:restriction base="xs:string">
            <xs:enumeration value="base"/>
            <xs:enumeration value="important"/>
            <xs:enumeration value="extra"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="t_codi">
        <xs:restriction base="xs:string">
            <xs:length value="3"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="calories_int">
        <xs:restriction base="xs:positiveInteger">
            <xs:maxInclusive value="500"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:element name="ingredient">
        <xs:complexType>
            <xs:sequence>
                <xs:element type="t_codi" name="codi"/>
                <xs:element type="xs:string" name="nom"/>
                <xs:element type="calories_int" name="calories"/>
                <xs:element type="t_importancia" minOccurs="0" name="importancia"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>